<h1>Books</h1>

<table>
    <thead>
        <tr>
             <th>Title</td>
             <th>Body</th>
             <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", booker_path(book) %></td>
            <td><%= link_to "Edit", edit_booker_path(book) %></td>
            <td><%= link_to "Destroy", booker_path(book), method: :delete %></td>
            <% end %>
        </tr>
    </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true  do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div><%= f.submit "Create Book" %></div>
<% end %>
