<h1 class="index-header">Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody class="tbody-box">
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか" %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<h2 class="index-item">New Book</h2>
<%= form_with model:@book, url:books_path,  local:true  do |f| %>
    <% if @book.errors.any? %>
      <div class="errors-messages">
         <p class="errors-count-messages"><%= @book.errors.count %>error prohibited this book from being saved:</p>
         <bl>
            <% @book.errors.full_messages.each do |messages| %>
            <li class="errors-message-item" ><%= messages %></li>
            <% end %>
         </bl>
      </div>
   <% end %>
    <label>Title</label>
    <div class="field"><%= f.text_field :title %></div>
    <label>Body</label>
    <div class="area"><%= f.text_area :body %></div>
    <div class="submit"><%= f.submit "Create Book" %></div>
<% end %>
